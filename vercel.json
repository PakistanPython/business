{
  "version": 2,
  "builds": [
    {
      "src": "backend/dist/server_sqlite.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend/dist/server_sqlite.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "JWT_SECRET": "@jwt_secret",
    "FRONTEND_URL": "https://my-business-app.vercel.app"
  },
  "functions": {
    "backend/dist/server_sqlite.js": {
      "maxDuration": 30
    }
  }
}